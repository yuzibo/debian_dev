+            ));
+            self.is_owned.push(true);
+        }).unwrap();
+        val.with_nix_path(|s| {
+            let len = s.to_bytes_with_nul().len();
+            self.iov.push(IoVec::from_raw_parts(
+                // Must free it later
+                s.to_owned().into_raw() as *mut c_void,
